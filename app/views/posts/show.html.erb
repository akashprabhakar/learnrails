<p id="notice"><%= notice %></p>

 <%= render :partial => @post %>

 <p class="btn btn-default"><%= link_to 'Edit', edit_post_path(@post) %></p> |
 <p class="btn btn-default"><%= link_to 'Back', posts_path %></p>

 <h4 class="page-header">Comments</h2>
 <div id="comments">
         <%= render :partial => @post.comments %>
 </div>

 <%= form_for [@post, Comment.new] do |f| %>
        <p>
                <%= f.label :body, "New comment" %><br/>
                <%= f.text_area :body %>
        </p>
        <p class="btn btn-default"><%= f.submit "Add comment" %></p>
<% end %>